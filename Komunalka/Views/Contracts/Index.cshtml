@model IEnumerable<Komunalka.Models.ContractViewModel>

@{
    ViewData["Title"] = "Сисок контрактів по постачальнику";
}

<h2>Сисок контрактів по постачальнику</h2>

<p>
    <a asp-action="Create">Створити контракт</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFinished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consumer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsumerImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResourceUnit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFinished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consumer)
            </td>
            <td>
                <img src="@item.ConsumerImage"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResourceUnit)
            </td>
            <td>
                @Html.ActionLink("Редагувати", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Видалити", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
